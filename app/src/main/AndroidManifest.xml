<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MatrixEditor"
        tools:targetApi="31">
        <activity
            android:name=".SettingsActivity"
            android:exported="false"
            android:label="@string/title_activity_settings"
            android:theme="@style/Theme.MatrixEditor" />
        <activity
            android:name=".CreateMatrixActivity"
            android:exported="false"
            android:label="@string/title_activity_create_matrix"
            android:theme="@style/Theme.MatrixEditor" />
        <activity
            android:name=".editMatrixActivity"
            android:exported="false"
            android:label="@string/title_activity_edit_matrix"
            android:theme="@style/Theme.MatrixEditor" />
        <activity
            android:name=".MatrixDisplayActivity"
            android:exported="false"
            android:label="@string/title_activity_matrix_display"
            android:theme="@style/Theme.MatrixEditor" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MatrixEditor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>